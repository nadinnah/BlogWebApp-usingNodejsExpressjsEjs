<%- include("partials/header.ejs") %>
<link rel="stylesheet" href="/styles/main.css">

<h2>Edit or delete your blogs:</h2>

<form method="POST" action="/Edit/<%= blog.id %>?_method=PATCH">

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= blog.title %>" required>

  <label for="content">Content:</label>
  <textarea id="content" name="content" required><%= blog.content %></textarea>

  <label for="date">Date:</label>
  <input type="text" id="date" name="date" value="<%= blog.date %>" readonly>

  <label for="time">Time:</label>
  <input type="text" id="time" name="time" value="<%= blog.time %>" readonly>

  <button type="submit">Update Blog</button>
  <br>
</form>

